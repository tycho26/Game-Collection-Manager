generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model games {
  game_id      String   @id @default(uuid())
  title        String   @db.VarChar(255)
  release_date DateTime @db.Date
  publisher    String   @db.VarChar(255)
  developer    String   @db.VarChar(255)
  img_path     String?  @db.VarChar(255)
  rating       Int?
  genres       genres[]
}

model media_types {
  media_type_id String   @id @default(uuid())
  name          String   @db.VarChar(255)
  genres        genres[]
}

model genres {
  genre_id      String      @id @default(uuid())
  name          String      @db.VarChar(255)
  media_type    media_types @relation(fields: [media_type_id], references: [media_type_id])
  media_type_id String
  games         games[]
}
